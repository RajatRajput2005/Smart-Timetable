datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Faculty {
  id       Int      @id @default(autoincrement())
  name     String
  busySlots String   @default("[]")
}

model Room {
  id       Int      @id @default(autoincrement())
  name     String
  capacity Int
  busySlots String   @default("[]")
}

model Timetable {
  id        Int      @id @default(autoincrement())
  course    String
  semester  Int
  schedule  Json
  createdAt DateTime @default(now())
}
